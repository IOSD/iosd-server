 <div class="container" style="margin-top:20px;">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Library-Admin!</h1>
             <p>Database of the library is available</p>
             <p>
                <a class="btn btn-primary btn-large" href="/book/new">Add New Book</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% books.forEach(function(book){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%=book.image%>">
                   <div class="caption">
                       <h4><%= book.name %></h4>
                        <h5>info</h5>
                   </div>
                       
                   <p>
                       <a href="/books/<%= book._id %>" class="btn btn-primary">More Info</a>
                       <a href="/books/delete/<%= book._id %>" class="btn btn-danger">Delete</a>
                   </p>
                      
                </div>
            </div>
        <% }); %>
    </div>

<div class="container">
    <div class="page-header">
        <h1>Playlists</h1>
    </div>
    <div class="row">
    <% for( let i = 0  ; i < playlists.length ; i++) {
        let playlist  = playlists[i]
    %>
        <div class="col-sm-6 col-md-4">
            <img class="img-responsive" src="<%= playlist.image %>" alt="Thumbnail">
            <div class="caption">
                <h4> <%= playlist.title %> </h4>
                <button class="btn btn-primary">
                    <a style="color: white" href="/playlist/<%= playlist._id %>">View Videos</a>
                </button>
            </div>
        </div>
    <% } %>
